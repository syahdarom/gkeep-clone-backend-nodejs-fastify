{
  "name": "gkeep-clone-backend-nodejs-fastify",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Syahda Romansyah",
    "email": "syahdarom@outlook.com"
  },
  "private": true,
  "scripts": {
    "dev": "tsx watch --tsconfig tsconfig.build.json src/server.ts",
    "build": "rimraf -- dist/ && tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "eslint .",
    "format:c": "prettier -c .",
    "format:w": "prettier -w .",
    "test": "vitest run --passWithNoTests",
    "test:w": "vitest --passWithNoTests",
    "check-types": "tsc --project tsconfig.build.json --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "pino-pretty": "^13.1.2",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rimraf": "^6.1.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.9"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=24.10.0"
  }
}
